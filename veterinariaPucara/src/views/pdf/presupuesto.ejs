<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <style>
        /* Eliminar estos CSS enviandolos a un archivo nuevo!!!! no olvidar!!  */
      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        color: #111;
      }
      h1 {
        font-size: 18px;
        margin: 0 0 10px;
      }
      .muted {
        color: #666;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 6px 8px;
        text-align: left;
      }
      th {
        background: #f3f4f6;
      }
      .total {
        display: flex;
        justify-content: space-between;
        margin-top: 8px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Presupuesto</h1>
    <div class="muted">Generado: <%= generadoEl %></div>

    <% if (owner) { %>
    <p>
      <strong>Propietario:</strong> <%= owner.nombre %> | <%= owner.fono || ''
      %> <%= owner.email || '' %>
    </p>
    <% } %> <% if (pet) { %>
    <p>
      <strong>Mascota:</strong> <%= pet.nombre %> (<%= pet.especie || '' %> <%=
      pet.raza || '' %>)
    </p>
    <% } %>

    <p><strong>Título:</strong> <%= presupuesto.titulo || '-' %></p>
    <p><strong>Notas:</strong> <%= presupuesto.notas || '-' %></p>

    <table>
      <thead>
        <tr>
          <th>Descripción</th>
          <th style="width: 80px">Cant.</th>
          <th style="width: 110px">Precio</th>
          <th style="width: 120px">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% (presupuesto.items || []).forEach(function(it){ const qty =
        Number(it.qty || 0); const price = Number(it.price || 0); const sub =
        qty * price; %>
        <tr>
          <td><%= it.desc || '-' %></td>
          <td><%= qty %></td>
          <td>$<%= price %></td>
          <td>$<%= sub %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="total">
      <span>Total</span>
      <span>$<%= presupuesto.total %></span>
    </div>
  </body>
</html>
