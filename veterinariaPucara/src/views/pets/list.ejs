<%- include('../layouts/layout', { body: `
<div class="d-flex align-items-center justify-content-between mb-3">
  <h2>Mascotas de ${owner.name}</h2>
  <a class="btn" href="/mascotas/${owner.id}/nueva">Nueva mascota</a>
</div>
<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="tbl">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Especie</th>
          <th>Raza</th>
          <th>Edad</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        ${pets.map(p => `
        <tr>
          <td>${p.name_pet}</td>
          <td>${p.especie}</td>
          <td>${p.raza || '-'}</td>
          <td>${p.age || '-'}</td>
          <td>
            <a class="link" href="/mascotas/${p.id}/consultas">Consultas</a>
          </td>
        </tr>
        `).join('')}
      </tbody>
    </table>
  </div>
</div>

` }) %>
